<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".YourOrdersActivity">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
<include layout="@layout/toolbar"
    android:id="@+id/toolbar"></include>

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_below="@+id/toolbar"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/aboutImage"
    android:background="@drawable/aboutus"
    android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutImage"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:src="@drawable/zigzag"
            android:gravity="center"

            />
        <com.spotify.repairit.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="@color/text"
            android:textSize="19sp"
            android:gravity="center" />
        <com.spotify.repairit.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A daily record of events or BUSINESS; a private journal is usually referred to as a diarya newspaper or other periodical, in the literal sense of one published each daymany publications issued at stated intervals, such as academic journals. "
            android:textColor="@color/subtext"
            android:lineSpacingExtra="4dp"
            android:textSize="14.5sp"
            android:gravity="center"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>



</RelativeLayout>
    <include layout="@layout/navigation_view"></include>
</android.support.v4.widget.DrawerLayout>