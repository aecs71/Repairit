<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageFlipper"
            android:inAnimation="@anim/rightslide"
            android:outAnimation="@anim/leftslide">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="photo1"
                android:src="@drawable/wereapir1"
                android:paddingTop="10dp"
                android:id="@+id/image1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="photo2"
                android:src="@drawable/waterrepairc"
                android:paddingTop="10dp"
                android:id="@+id/image2"
                 />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="photo2"
                android:src="@drawable/repairedbytrainedc"
                android:paddingTop="10dp"
                android:id="@+id/image3"
                />
        </ViewFlipper>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imageFlipper"
            android:src="@drawable/benefits"
            />
    </LinearLayout>



    <Button
        android:text="@string/ScheduleRepair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scheduleaRepair"
        style="@style/ButtonTheme"
        android:layout_alignParentBottom="true"
         />


</RelativeLayout>
